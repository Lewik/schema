<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="boconfiguration" path="/">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:index</default>
    </route>

    <route id="boconfiguration_show" path="/{id}/show">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:show</default>
    </route>

    <route id="boconfiguration_new" path="/new">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:new</default>
    </route>

    <route id="boconfiguration_create" path="/create">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="boconfiguration_edit" path="/{id}/edit">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:edit</default>
    </route>

    <route id="boconfiguration_update" path="/{id}/update">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="boconfiguration_delete" path="/{id}/delete">
        <default key="_controller">LewikBoManagerBundle:BoConfiguration:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
