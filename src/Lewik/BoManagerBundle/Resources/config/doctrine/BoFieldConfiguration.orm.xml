<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="Lewik\BoManagerBundle\Entity\BoFieldConfigurationRepository"
            name="Lewik\BoManagerBundle\Entity\BoFieldConfiguration">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="label" type="string" column="label" length="512"/>
        <field name="systemName" type="string" column="systemName" length="30"/>
        <field name="type" type="string" column="type" length="16"/>
        <field name="length" type="smallint" column="length" nullable="true"/>
        <field name="targetEntity" type="string" column="targetEntity" length="30" nullable="true"/>
        <field name="inversedBy" type="string" column="inversedBy" length="16" nullable="true"/>
        <field name="mappedBy" type="string" column="mappedBy" length="16" nullable="true"/>
        <many-to-one field="bo" target-entity="Lewik\BoManagerBundle\Entity\BoConfiguration" inversed-by="fields"/>
    </entity>
</doctrine-mapping>
