{% extends '::base.html.twig' %}

{% block body -%}
    <h3>BoConfiguration list</h3>

    <table class="records_list" border="1">
        <thead>
        <tr>

            <th>Id</th>
            <th>Label</th>
            <th>System name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('boconfiguration_show', { 'id': entity.id }) }}">{{ entity.label }}</a></td>
                <td>{{ entity.systemName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('boconfiguration_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li><a href="{{ path('boconfiguration_new') }}"> Create a new entry </a></li>
        <li><a href="{{ path('lewik_bo_manager_generate_bo') }}">Generate files</a></li>
    </ul>
{% endblock %}
